{
  "name": "mcp-complete-example",
  "version": "1.0.0",
  "description": "Ejemplo completo de MCP con OpenAI API y React",
  "type": "module",
  "scripts": {
    "install-all": "npm install && cd frontend && npm install",
    "build": "tsc",
    "dev": "concurrently \"npm run server:dev\" \"npm run backend:dev\" \"npm run frontend:dev\"",
    "server:dev": "tsx watch src/mcp-server/server.ts",
    "server:start": "node dist/mcp-server/server.js",
    "backend:dev": "tsx watch src/backend/app.ts",
    "backend:start": "node dist/backend/app.js",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "openai": "^4.68.4",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^10.0.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.9",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "concurrently": "^9.0.1",
    "jest": "^29.7.0",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3"
  },
  "keywords": [
    "mcp",
    "openai",
    "typescript",
    "react",
    "nodejs"
  ],
  "author": "Tu Nombre",
  "license": "MIT"
}