# === VARIABLES DE ENTORNO - PROYECTO MCP ===
# Copia este archivo como .env y configura los valores reales

# === CONFIGURACIÓN DEL SERVIDOR ===
PORT=3001
FRONTEND_PORT=3000
NODE_ENV=development

# === CONFIGURACIÓN DE OPENAI ===
# Obtén tu API key en: https://platform.openai.com/api-keys
OPENAI_API_KEY=tu_openai_api_key_aqui

# === CONFIGURACIÓN DE OPENWEATHER (OPCIONAL) ===
# Obtén tu API key en: https://openweathermap.org/api
OPENWEATHER_API_KEY=tu_openweather_api_key_aqui

# === CONFIGURACIÓN DE CORS ===
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# === CONFIGURACIÓN DE RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === CONFIGURACIÓN DE BASE DE DATOS ===
DATABASE_PATH=./src/mcp-server/database/notes.db

# === CONFIGURACIÓN DE LOGGING ===
LOG_LEVEL=info
LOG_FILE=./logs/mcp-server.log

# === CONFIGURACIÓN DE MCP ===
MCP_SERVER_NAME=mcp-tutorial-server
MCP_SERVER_VERSION=1.0.0
